{
	"name": "@blueeast/bluerain-cli-monorepo",
	"version": "0.0.0",
	"description": "CLI tool to make life with BlueRain easier!",
	"main": "index.js",
	"repository": {
		"type": "git",
		"url": "git@github.com:BlueEastCode/bluerain-cli.git" 
	},
	"author": "BlueEast Team <code@blueeast.com>",
	"license": "MIT",
	"keywords": [
		"automation",
		"changelog",
		"module",
		"package",
		"publish",
		"release",
		"version",
		"lerna",
		"bluerain"
	  ],
	"scripts": {
		"wizard": "lerna-wizard",
		"commit": "git-cz",
		"semantic-release": "lerna-semantic-release pre && lerna-semantic-release post && lerna-semantic-release perform",
		"postinstall": "lerna bootstrap",
		"precommit": "npm run lint",
		"commitmsg": "validate-commit-msg",
		"prepush": "npm run lint && npm run test",
		"test": "lerna run test",
		"lint": "eslint packages"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-lerna-changelog"
		},
		"validate-commit-msg": {
			"types": "conventional-commit-types",
			"helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
		}
	},
	"devDependencies": {
		"babel-eslint": "^8.2.2",
		"commitizen": "^2.9.6",
		"cross-env": "^5.1.3",
		"cz-conventional-changelog": "^2.1.0",
		"cz-lerna-changelog": "^1.2.1",
		"eslint": "^4.18.1",
		"eslint-config-airbnb": "^16.1.0",
		"eslint-config-blueeast": "^0.3.2",
		"eslint-config-prettier": "^2.9.0",
		"eslint-config-xo": "^0.20.1",
		"eslint-plugin-import": "^2.9.0",
		"eslint-plugin-jest": "^21.12.2",
		"eslint-plugin-json": "^1.2.0",
		"eslint-plugin-jsx-a11y": "^6.0.3",
		"eslint-plugin-prettier": "^2.6.0",
		"eslint-plugin-react": "^7.7.0",
		"lerna": "^2.9.0",
		"lerna-wizard": "^1.0.9",
		"prettier": "^1.10.2",
		"lerna-semantic-release": "^9.0.1"
	},
	"release": {
		"branch": "master"
	}
}
