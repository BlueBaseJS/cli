{
	"name": "@blueeast/bluerain-cli-monorepo",
	"version": "1.0.0",
	"description": "CLI tool to make life with BlueRain easier!",
	"main": "index.js",
	"repository": "git@github.com:BlueEastCode/bluerain-cli.git",
	"author": "BlueEast Team <code@blueeast.com>",
	"license": "MIT",
	"scripts": {
		"lint": "yarn lint:js . && yarn lint:ts **/*.ts && yarn lint:md .",
		"lint:js": "cross-env NODE_ENV=production eslint --cache --cache-location=.cache/eslint --ext .js,.jsx,.json --report-unused-disable-directives",
		"lint:ts": "tslint -p . -c tslint.json -t stylish",
		"commit": "git-cz",
		"wizard": "lerna-wizard"
	},
	"config": {
		"commitizen": {
			"path": "node_modules/cz-conventional-changelog"
		},
		"validate-commit-msg": {
			"types": "conventional-commit-types",
			"helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
		}
	},
	"devDependencies": {
		"babel-eslint": "^8.2.2",
		"commitizen": "^2.9.6",
		"cross-env": "^5.1.3",
		"cz-conventional-changelog": "^2.1.0",
		"eslint": "^4.18.1",
		"eslint-config-airbnb": "^16.1.0",
		"eslint-config-blueeast": "^0.3.2",
		"eslint-config-prettier": "^2.9.0",
		"eslint-config-xo": "^0.20.1",
		"eslint-plugin-import": "^2.9.0",
		"eslint-plugin-jest": "^21.12.2",
		"eslint-plugin-json": "^1.2.0",
		"eslint-plugin-jsx-a11y": "^6.0.3",
		"eslint-plugin-prettier": "^2.6.0",
		"eslint-plugin-react": "^7.7.0",
		"lerna": "^2.9.0",
		"lerna-wizard": "^1.0.9",
		"prettier": "^1.10.2"
	}
}
