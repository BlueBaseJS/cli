{
	"name": "@blueeast/bluerain-cli-monorepo",
	"version": "0.0.0",
	"description": "CLI tool to make life with BlueRain easier!",
	"main": "index.js",
	"repository": {
		"type": "git",
		"url": "git@github.com:BlueEastCode/bluerain-cli.git"
	},
	"author": "BlueEast Team <code@blueeast.com>",
	"license": "MIT",
	"keywords": [
		"automation",
		"changelog",
		"module",
		"package",
		"publish",
		"release",
		"version",
		"lerna",
		"bluerain"
	],
	"scripts": {
		"wizard": "lerna-wizard",
		"commit": "git-cz",
		"semantic-release": "lerna-semantic-release pre && lerna-semantic-release post && lerna-semantic-release perform",
		"postinstall": "lerna bootstrap",
		"clean": "lerna clean",
		"commitmsg": "validate-commit-msg",
		"test": "lerna run test"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-lerna-changelog"
		},
		"validate-commit-msg": {
			"types": "conventional-commit-types",
			"helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
		}
	},
	"devDependencies": {
		"babel-eslint": "^8.2.2",
		"commitizen": "^2.9.6",
		"cross-env": "^5.1.3",
		"cz-conventional-changelog": "^2.1.0",
		"cz-lerna-changelog": "^1.2.1",
		"eslint": "^4.18.1",
		"eslint-config-airbnb": "^16.1.0",
		"eslint-config-blueeast": "^0.3.2",
		"exec": "^0.2.1",
		"exp": "^49.2.2",
		"expo": "^25.0.0",
		"extract-text-webpack-plugin": "^3.0.2",
		"file-loader": "^1.1.6",
		"happypack": "^4.0.0",
		"html-webpack-plugin": "^2.30.1",
		"inquirer": "^3.3.0",
		"lodash.kebabcase": "^4.1.1",
		"lodash.set": "^4.3.2",
		"node-notifier": "^5.1.2",
		"npm-run-all": "^4.1.2",
		"offline-plugin": "^4.8.3",
		"path": "^0.12.7",
		"progress-bar-webpack-plugin": "^1.10.0",
		"@types/react": "^16.0.35",
		"@types/react-dom": "^16.0.3",
		"react": "^16.2.0",
		"react-dom": "^16.2.0",
		"react-hot-loader": "^3.1.1",
		"react-native": "^0.52.2",
		"reactxp": "^0.46.5",
		"rimraf": "^2.6.2",
		"semantic-release": "^14.0.1",
		"serialize-javascript": "^1.4.0",
		"shelljs": "^0.7.8",
		"source-map-loader": "^0.1.6",
		"style-loader": "^0.20.2",
		"typescript": "^2.6.2",
		"url-loader": "^0.6.2",
		"utf-8-validate": "^3.0.4",
		"webpack": "^3.6.0",
		"webpack-bundle-analyzer": "^2.9.0",
		"webpack-dev-server": "^2.9.4",
		"webpack-md5-hash": "0.0.5",
		"webpack-merge": "^4.1.1",
		"webpack-node-externals": "^1.6.0",
		"yargs": "^10.0.3"
	}
}
